@model ProductWithCommentsViewModel
@{
    ViewBag.Title = Model.Name;
    bool activedFlag = true;
}

<div class="container mt-5 mb-5 bg-light rounded border">
    <div class="row mb-5">
        <div class="col p-4">
            <div id="carouselExampleFade" class="carousel slide carousel-fade border rounded p-2" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @foreach (var image in Model.Images)
                    {
                        <div class="carousel-item @(activedFlag ? "active" :"")">
                            <img class="img-fluid" src="~/images/@image.NameWithPath" />
                        </div>
                        activedFlag = false;
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col">
            <div class="p-4">
                <h3>@Model.Brand.Name</h3>
                <p>@Model.Name</p>
                <p>@Model.Description  @Model.Description  @Model.Description  @Model.Description  @Model.Description</p>
                <p>@Model.Price.ToString("N") TL</p>
                @if (User.Identity.IsAuthenticated)
                {
                    <button class="btn btn-primary">Add to cart</button>
                }
            </div>
        </div>
    </div>
    <div class="row border-top">
        <div class="col p-5">
            <h3 class="mt-3">Comments</h3>
            @foreach (var comment in Model.Comments)
            {
                <fieldset class="border p-2">
                    <legend class="float-none w-auto p-2">@comment.User.FirstName @comment.User.LastName</legend>
                    <p>@comment.Content</p>
                </fieldset>
            }
            @if (User.Identity.IsAuthenticated)
            {
                <form method="post" class="d-flex align-items-center mt-3" asp-action="AddComment" asp-controller="Home" asp-area="">
                    <div class="input-group">
                        <input type="hidden" value="@Model.Id" asp-for="AddComment.ProductId" />
                        <textarea class="form-control" asp-for="AddComment.Content"></textarea>
                        <button type="submit" class="btn btn-primary">
                            <span>Add a new <br /> comment</span>
                        </button>
                    </div>
                    <div class="text-danger" asp-validation-summary="All"></div>
                </form>
            }
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}