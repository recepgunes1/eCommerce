<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Header"] - eCommerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <header class="border-bottom bg-light">
        <nav class="container p-3">
            <div class="row align-items-center">
                <div class="col d-flex justify-content-center text-center">
                    <div class="m-2 pe-5">
                        <img src="~/svg/cart/1-circle@(!ReferenceEquals(ViewData["Current"], "Cart" ) ? "" : "-fill").svg" width="32" height="32" />
                        Cart
                    </div>
                    <div class="m-2">
                        <img src="~/svg/cart/2-circle@(!ReferenceEquals(ViewData["Current"], "Payment" ) ? "" : "-fill").svg" width="32" height="32" />
                        Payment
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="d-flex justify-content-center align-content-center m-5">
        @RenderBody()
    </div>
</body>
</html>
