<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - eCommerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/jquery-DataTables/DataTables-1.13.1/css/dataTables.bootstrap5.css" />

</head>
<body>
    <header class="border-bottom bg-light">
        <nav class="container p-3">
            <div class="row align-items-center">
                <div class="col d-flex justify-content-center text-center">
                    <div class="m-2 pe-5">
                        <img src="~/svg/cart/1-circle@(!ReferenceEquals(ViewData["Current"], "Cart" ) ? "" : "-fill").svg" width="32" height="32" />
                        Cart
                    </div>
                    <div class="m-2">
                        <img src="~/svg/cart/2-circle@(!ReferenceEquals(ViewData["Current"], "Payment" ) ? "" : "-fill").svg" width="32" height="32" />
                        Payment
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="m-5 p-5">
        @RenderBody()
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-DataTables/DataTables-1.13.1/js/jquery.dataTables.js"></script>
    <script src="~/lib/jquery-DataTables/DataTables-1.13.1/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(() => {
            $(`.navbar-nav > li > a[href="${window.location.pathname}"]`).addClass('active');
        })
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
