<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - eCommerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <header class="mb-4">
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <div class="container-fluid justify-content-center">
                <a class="navbar-brand ms-3 me-5" asp-area="" asp-controller="Home" asp-action="Index">e-Commerce</a>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="d-flex justify-content-center">
            <div class="card mt-3 mb-3">
                <div class="card-header">
                    <ul class="nav nav-pills card-header-pills justify-content-center">
                        <li class="nav-item">
                            <a asp-area="Auth" asp-controller="Home" asp-action="Login" class="nav-link">Sign In</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Auth" asp-controller="Home" asp-action="Register" class="nav-link">Sign Up</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body p-5">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(() => {
            $(`.navbar-nav > li > a[href="${window.location.pathname}"]`).addClass('active');
        })
    </script>
</body>
</html>
