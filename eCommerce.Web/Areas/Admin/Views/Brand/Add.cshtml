@model AddBrandViewModel
@{
    ViewBag.Title = "Add a New Brand";
}

<div class="m-5">
    <form asp-action="Add" asp-controller="Brand" asp-area="Admin" method="post" enctype="multipart/form-data">
        <div class="row mb-3">
            <div class="col-1">
                @Html.LabelFor(p => p.Name)
            </div>
            <div class="col-5">
                @Html.TextBoxFor(p => p.Name, new {@class = "form-control", @value = Html.DisplayNameFor(p => p.Name)})
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-1">
                @Html.LabelFor(p => p.Photo)
            </div>
            <div class="col-5">
                <input class="form-control" asp-for="Photo" type="file" accept="image/png, image/jpg, image/jpeg" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-6">
                <input type="submit" value="Add" class="btn btn-primary w-100">
            </div>
        </div>
        @Html.ValidationSummary(null, new {@class = "text-danger"})
    </form>
</div>
