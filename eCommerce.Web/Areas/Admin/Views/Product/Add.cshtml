@model AddProductViewModel
@{
    ViewBag.Title = "Add a New Product";
}

<div class="m-5">
    <form asp-action="Add" asp-controller="Product" asp-area="Admin" method="post" enctype="multipart/form-data">
        <div class="row mb-3">
            <div class="col-5">
                <input class="form-control" type="text" asp-for="Name" placeholder="Enter product name"/>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-5">
                <textarea class="form-control" asp-for="Description" placeholder="Enter product description"></textarea>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-5">
                <input class="form-control" type="number" asp-for="Quantity" placeholder="Enter amount of product"/>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-5">
                <input class="form-control" type="text" asp-for="Price" placeholder="Enter product price" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-5">
                <select class="form-select" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
                    <option disabled selected>Select a Category</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-5">
                <select class="form-select" asp-for="BrandId" asp-items="@(new SelectList(Model.Brands, "Id", "Name"))">
                    <option disabled selected>Select a Brand</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-5">
                <input class="form-control" asp-for="Photo" type="file" accept="image/png, image/jpg, image/jpeg" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-5">
                <input type="submit" value="Add" class="btn btn-primary w-50">
            </div>
        </div>
        @Html.ValidationSummary(null, new {@class = "text-danger"})
    </form>
</div>
