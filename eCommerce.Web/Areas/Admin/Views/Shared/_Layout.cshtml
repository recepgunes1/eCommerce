<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - eCommerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="row text-break vh-100">
            <div class="col-2 bg-light border-end p-3">
                <div class="text-center mb-5">
                    <p class="h3 border-bottom">eCommerce</p>
                    <p class="h5">Management</p>
                </div>
                <ul class="list-group">
                    <li class="list-group-item list-group-item-action active">
                        <a class="link-light" asp-action="Index" asp-controller="Home" asp-area="Admin">
                            Dashboard
                        </a>
                    </li>
                    <li class="list-group-item list-group-item-action">
                        <a asp-action="Index" asp-controller="Brand" asp-area="Admin">
                            Brands
                        </a>
                    </li>
                    <li class="list-group-item list-group-item-action">
                        <a asp-action="Index" asp-controller="Category" asp-area="Admin">
                            Categories
                        </a>
                    </li>
                    <li class="list-group-item list-group-item-action">
                        Comments
                    </li>
                    <li class="list-group-item list-group-item-action">
                        Products
                    </li>
                    <li class="list-group-item list-group-item-action">
                        Users
                    </li>
                    <li class="list-group-item list-group-item-action">
                        Orders
                    </li>
                    <li class="list-group-item list-group-item-action list-group-item-danger" data-bs-toggle="collapse" data-bs-target="#collapseTrashbox" aria-expanded="false" aria-controls="collapseTrashbox">
                        <span class="fw-bolder">TrashBox</span>
                        <div class="collapse mt-3 ms-3" id="collapseTrashbox">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item list-group-item-action list-group-item-danger">Users</li>
                                <li class="list-group-item list-group-item-action list-group-item-danger">Comments</li>
                                <li class="list-group-item list-group-item-action list-group-item-danger">Categories</li>
                                <li class="list-group-item list-group-item-action list-group-item-danger">Brands</li>
                            </ul>
                        </div>
                    </li>
                </ul>
                <div class="mt-5">
                    <a class="btn btn-primary w-100" asp-action="Index" asp-controller="Home" asp-area=""><< Back to home</a>
                </div>
            </div>
            <div class="col-9 p-5">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
