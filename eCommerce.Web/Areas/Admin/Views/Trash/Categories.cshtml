@model IEnumerable<CategoryViewModel>
@{
    ViewBag.Title = "Category Trash";
}
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Parent Name</th>
            <th>Created Date</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@(category.ParentCategory?.Name ?? "NULL")</td>
                <td>@category.CreatedDate</td>
                <td>
                    <a class="btn btn-warning" asp-action="RestoreCategory" asp-controller="Trash" asp-area="Admin" asp-route-Id="@category.Id">Restore</a>
                </td>
            </tr>
        }
    </tbody>
</table>
