@model IEnumerable<UserViewModel>
@{
    ViewBag.Title = "User Trash";
}
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>EMail</th>
            <th>Birth Date</th>
            <th>Role</th>
            <th>Lockout End</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.DateBirth.ToShortDateString()</td>
                <td>@user.Role</td>
                <td>@user.LockoutEnd</td>
                <td>
                    <a class="btn btn-warning" asp-action="RestoreUser" asp-controller="Trash" asp-area="Admin" asp-route-Id="@user.Id">Restore</a>
                </td>
            </tr>
        }
    </tbody>
</table>
