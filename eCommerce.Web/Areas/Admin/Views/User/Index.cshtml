@model IEnumerable<SimpleUserViewModel>;
@{
    ViewBag.Title = "Users";
}
<table class="table table-bordered table-striped">
    <thead>
        <tr class="text-center">
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a class="btn btn-warning" asp-action="Lockout" asp-controller="User" asp-area="Admin" asp-route-Id="@user.Id">Lockout</a>
                    <a class="btn btn-success" asp-action="Update" asp-controller="User" asp-area="Admin" asp-route-Id="@user.Id">Update</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="6">
                <a class="btn btn-primary w-25" asp-action="Add" asp-controller="User" asp-area="Admin">Add a new user</a>
            </td>
        </tr>
    </tfoot>
</table>
